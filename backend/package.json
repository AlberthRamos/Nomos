{
  "name": "nomos-backend",
  "version": "1.0.0",
  "description": "Backend for the Nomos micro-SaaS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start-pm2": "pm2 start ecosystem.config.js --env production",
    "monitor": "pm2 monit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["saas", "catalog", "open-source", "pm2"],
  "author": "Nomos Open Source",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.10.3",
    "pm2": "^5.4.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
